# ===================================
# Quantum Banking Application
# Git LFS and File Attributes
# ===================================

# Git LFS - Large Files (>100MB)
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.tgz filter=lfs diff=lfs merge=lfs -text
*.rar filter=lfs diff=lfs merge=lfs -text
*.7z filter=lfs diff=lfs merge=lfs -text

# Docker Images and Container Files
*.tar filter=lfs diff=lfs merge=lfs -text
docker-images/*.tar filter=lfs diff=lfs merge=lfs -text
*.img filter=lfs diff=lfs merge=lfs -text
*.iso filter=lfs diff=lfs merge=lfs -text

# Database Dumps and Backups
*.sql filter=lfs diff=lfs merge=lfs -text
*.dump filter=lfs diff=lfs merge=lfs -text
*.backup filter=lfs diff=lfs merge=lfs -text
backups/*.sql filter=lfs diff=lfs merge=lfs -text
database-dumps/* filter=lfs diff=lfs merge=lfs -text

# Binary Assets and Media
*.pdf filter=lfs diff=lfs merge=lfs -text
*.doc filter=lfs diff=lfs merge=lfs -text
*.docx filter=lfs diff=lfs merge=lfs -text
*.ppt filter=lfs diff=lfs merge=lfs -text
*.pptx filter=lfs diff=lfs merge=lfs -text
*.xls filter=lfs diff=lfs merge=lfs -text
*.xlsx filter=lfs diff=lfs merge=lfs -text

# Video Files
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.avi filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.wmv filter=lfs diff=lfs merge=lfs -text
*.flv filter=lfs diff=lfs merge=lfs -text
*.webm filter=lfs diff=lfs merge=lfs -text

# Audio Files
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text
*.flac filter=lfs diff=lfs merge=lfs -text
*.aac filter=lfs diff=lfs merge=lfs -text

# Large Image Files
*.psd filter=lfs diff=lfs merge=lfs -text
*.ai filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text
*.tif filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text

# Compiled Binaries and Executables
*.exe filter=lfs diff=lfs merge=lfs -text
*.dll filter=lfs diff=lfs merge=lfs -text
*.so filter=lfs diff=lfs merge=lfs -text
*.dylib filter=lfs diff=lfs merge=lfs -text
*.app filter=lfs diff=lfs merge=lfs -text
*.deb filter=lfs diff=lfs merge=lfs -text
*.rpm filter=lfs diff=lfs merge=lfs -text
*.msi filter=lfs diff=lfs merge=lfs -text

# Development and Build Artifacts (if large)
*.jar filter=lfs diff=lfs merge=lfs -text
*.war filter=lfs diff=lfs merge=lfs -text
*.ear filter=lfs diff=lfs merge=lfs -text

# Test Data and Fixtures (if large)
test-data/*.json filter=lfs diff=lfs merge=lfs -text
fixtures/*.sql filter=lfs diff=lfs merge=lfs -text
test-fixtures/*.csv filter=lfs diff=lfs merge=lfs -text

# Log Files (if they become large)
*.log filter=lfs diff=lfs merge=lfs -text
logs/*.log filter=lfs diff=lfs merge=lfs -text

# ===================================
# Text File Handling
# ===================================

# Ensure consistent line endings
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Configuration Files
*.conf text eol=lf
*.config text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.toml text eol=lf
*.env text eol=lf
*.env.* text eol=lf
Dockerfile text eol=lf
Makefile text eol=lf
*.mk text eol=lf

# Kubernetes and Docker
*.yaml text eol=lf
*.yml text eol=lf
docker-compose*.yml text eol=lf
k8s/*.yaml text eol=lf
k8s/*.yml text eol=lf

# Documentation
README* text eol=lf
CHANGELOG* text eol=lf
CONTRIBUTING* text eol=lf
LICENSE* text eol=lf
SECURITY* text eol=lf
*.md text eol=lf

# ===================================
# Binary File Handling
# ===================================

# Images (small ones, not LFS)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Fonts
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Other Binary Files
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary
*.7z binary
*.rar binary

# ===================================
# Language-specific Attributes
# ===================================

# Python
*.py text eol=lf diff=python
*.pyx text eol=lf
*.pxd text eol=lf
*.pxi text eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# Shell Scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# SQL
*.sql text eol=lf

# ===================================
# Security and Sensitive Files
# ===================================

# Ensure sensitive files are treated as text for proper handling
*.key text eol=lf
*.pem text eol=lf
*.crt text eol=lf
*.pub text eol=lf

# But exclude them from diffs for security
*.key diff=secret
*.pem diff=secret
*.crt diff=secret
secrets.* diff=secret
*.env diff=secret
*.env.* diff=secret