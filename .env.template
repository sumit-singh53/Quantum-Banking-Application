# ===================================
# Quantum Banking Application
# Root Environment Configuration Template
# ===================================

# ===================================
# ENVIRONMENT CONFIGURATION
# ===================================
# Environment: development | staging | production
ENVIRONMENT=development

# Application Version
APP_VERSION=1.0.0

# ===================================
# GLOBAL SECURITY SETTINGS
# ===================================
# Post-Quantum Cryptography Settings
PQC_ENABLED=true
HYBRID_MODE=true

# Global Security Keys (CHANGE IN PRODUCTION)
MASTER_ENCRYPTION_KEY=your-master-encryption-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
API_GATEWAY_SECRET=your-api-gateway-secret-here

# ===================================
# DATABASE CONFIGURATION
# ===================================
# PostgreSQL Master Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_SSL_MODE=prefer
POSTGRES_MAX_CONNECTIONS=100

# Database Credentials (CHANGE IN PRODUCTION)
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=postgres_admin_password

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password
REDIS_MAX_CONNECTIONS=50
REDIS_TIMEOUT=5

# ===================================
# KAFKA CONFIGURATION
# ===================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=kafka_user
KAFKA_SASL_PASSWORD=kafka_password

# ===================================
# HASHICORP VAULT CONFIGURATION
# ===================================
VAULT_ENABLED=true
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-root-token
VAULT_MOUNT_POINT=quantum-banking
VAULT_TIMEOUT=30

# ===================================
# MONITORING AND OBSERVABILITY
# ===================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafana_admin_password

# Jaeger Tracing
JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ===================================
# LOGGING CONFIGURATION
# ===================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/quantum-banking

# ===================================
# RATE LIMITING (GLOBAL)
# ===================================
GLOBAL_RATE_LIMIT_ENABLED=true
GLOBAL_RATE_LIMIT_REQUESTS_PER_MINUTE=1000
GLOBAL_RATE_LIMIT_BURST=100

# ===================================
# CORS CONFIGURATION
# ===================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# ===================================
# SSL/TLS CONFIGURATION
# ===================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/quantum-banking.crt
SSL_KEY_PATH=/etc/ssl/private/quantum-banking.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# ===================================
# KUBERNETES CONFIGURATION
# ===================================
KUBERNETES_NAMESPACE=quantum-banking-system
KUBERNETES_SERVICE_ACCOUNT=quantum-banking-sa
KUBERNETES_CLUSTER_NAME=quantum-banking-cluster

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
DEBUG=true
DEVELOPMENT_MODE=true
HOT_RELOAD_ENABLED=true
API_DOCUMENTATION_ENABLED=true

# ===================================
# PRODUCTION SETTINGS
# ===================================
# Uncomment and configure for production
# DEBUG=false
# DEVELOPMENT_MODE=false
# HOT_RELOAD_ENABLED=false
# API_DOCUMENTATION_ENABLED=false
# SECURE_COOKIES=true
# SECURE_HEADERS=true
# HSTS_ENABLED=true
# CSP_ENABLED=true

# ===================================
# BACKUP AND DISASTER RECOVERY
# ===================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/quantum-banking

# ===================================
# COMPLIANCE AND AUDIT
# ===================================
AUDIT_LOGGING_ENABLED=true
COMPLIANCE_REPORTING_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
PII_ENCRYPTION_ENABLED=true

# ===================================
# EXTERNAL INTEGRATIONS
# ===================================
# Payment Gateway (Example)
PAYMENT_GATEWAY_URL=https://api.payment-provider.com
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-api-key
PAYMENT_GATEWAY_WEBHOOK_SECRET=your-webhook-secret

# KYC/AML Provider (Example)
KYC_PROVIDER_URL=https://api.kyc-provider.com
KYC_PROVIDER_API_KEY=your-kyc-provider-api-key

# Notification Services
EMAIL_SERVICE_ENABLED=true
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=noreply@quantumbanking.com
EMAIL_SMTP_PASSWORD=email_password

SMS_SERVICE_ENABLED=true
SMS_PROVIDER_URL=https://api.sms-provider.com
SMS_PROVIDER_API_KEY=your-sms-api-key

# ===================================
# FEATURE FLAGS
# ===================================
FEATURE_BIOMETRIC_AUTH=true
FEATURE_QUANTUM_ENCRYPTION=true
FEATURE_REAL_TIME_FRAUD_DETECTION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MOBILE_BANKING=true
FEATURE_OPEN_BANKING_API=false

# ===================================
# PERFORMANCE TUNING
# ===================================
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000

# ===================================
# SECURITY HEADERS
# ===================================
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin